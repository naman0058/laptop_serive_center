<div class="content-inner container-fluid pb-0" id="page_layout">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title"><%= pageHeader %></h4>
                        <input type="hidden" id="type" value="<%=name%>">
                    </div>
                   <a href="/admin/dashboard/new/<%=name %>"> <button type="button" class="btn btn-primary" style="float: right;"><%= buttonContent %> </button></a>
                </div>
                <div class="card-body">
                    <% if (!result[0]) { %>
                        <p style="font-weight: bold; color: black; text-align: center;">No Data Found</p>
                    <% } else { %>
                        <div class="table-responsive">
                            <table id="input-datatable" class="table" data-toggle="data-table-column-filter">
                                <thead>
                                    <tr>
                                        <% if (result.length > 0) { %>
                                            <% Object.keys(result[0]).forEach(key => { %>
                                                <% if (key !== 'status' || key !== 'type') { %>
                                                    <th><%= key.charAt(0).toUpperCase() + key.slice(1) %></th>
                                                <% } %>
                                            <% }) %>
                                            <th>Actions</th>
                                        <% } %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% result.forEach(item => { %>
                                        <tr>
                                            <% Object.entries(item).forEach(([key, value]) => { %>
                                                <% if (key !== 'status' || key !== 'type') { %>

                                                    <td><%= value %></td>
                                                <% } %>
                                            <% }) %>
                                            <td>
                                              <a href="/admin/dashboard/update/<%=name%>/<%=item.id%>" style="color: white;">  <button class="btn btn-primary" style="color: white;">Edit</a></button>
                                                <button class="btn btn-danger" onclick="deleteItem(<%= item.id %>)">Delete</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <% if (result.length > 0) { %>
                                            <% Object.keys(result[0]).forEach(key => { %>
                                                <% if (key !== 'status' || key !== 'type') { %>

                                                    <th title="<%= key.charAt(0).toUpperCase() + key.slice(1) %>"><%= key.charAt(0).toUpperCase() + key.slice(1) %></th>
                                                <% } %>
                                            <% }) %>
                                            <th>Actions</th>
                                        <% } %>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
